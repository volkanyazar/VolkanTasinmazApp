{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/VolkanAppTasinmaz.API/ClientApp"
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": ".*Compiled successfully.*",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Compiling.*",
                    "endsPattern": ".*Compiled successfully.*"
                }
            }
        }
    ]
}
