{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/VolkanAppTasinmaz.API/VolkanAppTasinmaz.API.csproj"
            ],
            "dependsOn": "Build and Run Backend",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Serve Frontend",
            "type": "shell",
            "command": "ng",
            "args": [
                "serve",
                "--open"
            ],
            "options": {
                "cwd": "${workspaceFolder}/VolkanAppTasinmaz.API/ClientApp"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
